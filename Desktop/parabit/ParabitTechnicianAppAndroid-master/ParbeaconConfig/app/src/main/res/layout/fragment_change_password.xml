<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_password_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.parabit.parabeacon.app.tech.ChangePasswordFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:theme="@style/TextLabel"
        app:passwordToggleEnabled="true"
        android:visibility="visible">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your new password  "
            android:inputType="textPassword"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        android:theme="@style/TextLabel"
        android:visibility="visible">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_change_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-enter your new password  "
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            app:passwordToggleEnabled="true"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:lines="5"
        android:paddingLeft="5dp"
        android:text="Password requirements \n - Minimum 8 characters \n - At least 1 number \n - At least 1 uppercase character \n - At least 1 lowercase character \n" />

</LinearLayout>
