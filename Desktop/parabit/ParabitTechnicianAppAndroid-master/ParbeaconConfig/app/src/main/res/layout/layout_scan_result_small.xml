<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_small"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/scan_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:text="Parabeacon"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textColor="@color/colorPrimaryLight"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scan_card_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/scan_card_name"
            android:layout_marginBottom="26dp"
            android:text="Unregistered" />

        <TextView
            android:id="@+id/scan_card_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/scan_card_name"
            android:layout_marginEnd="20dp"
            android:text="N/A" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/scan_card_name"
            android:layout_marginEnd="48dp"
            android:text="RSSI:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scan_card_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/scan_card_rssi"
            android:layout_alignTop="@+id/scan_card_desc"
            android:text="N/A"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/scan_card_desc"
            android:layout_toStartOf="@+id/scan_card_sn"
            android:paddingRight="5dp"
            android:text="S/N:"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>
</android.support.v7.widget.CardView>