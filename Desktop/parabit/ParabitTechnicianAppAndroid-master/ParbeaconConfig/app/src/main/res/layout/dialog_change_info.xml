<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_change_uid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Update Beacon"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/cancel_change_uid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/cross" />
    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/shadow"
        android:layout_gravity="top" />

    <!-- Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="14dp"
        android:paddingRight="20dp">

        <!-- Enter new uid -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <EditText
                android:id="@+id/txtEditName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter new name"
                android:maxLength="30"
                android:paddingRight="13dp"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/name_tracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(30/30)" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_between_lines"
            android:text="Description:"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <EditText
                android:id="@+id/txtEditDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter new description"
                android:maxLength="30"
                android:paddingRight="13dp"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/desc_tracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(30/30)" />
        </LinearLayout>
    </LinearLayout>

    <!-- Confirmation button -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingLeft="20dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/confirm_button"
            android:theme="@style/buttonStyle"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>