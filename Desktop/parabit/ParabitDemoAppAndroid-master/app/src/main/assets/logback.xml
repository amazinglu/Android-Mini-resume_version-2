      <!--<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>-->
    <!--</encoder>-->
  <!--</appender>-->

  <root level="DEBUG">
    <appender-ref ref="logcat" />
    <!--<appender-ref ref="STDOUT" />-->
    <appender-ref ref="logzio" />
    <!--<appender-ref ref="FILE" />-->
  </root>
</configuration>