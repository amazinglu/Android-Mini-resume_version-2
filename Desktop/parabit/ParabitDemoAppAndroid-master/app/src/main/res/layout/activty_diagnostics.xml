<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parabit.parabeacon.app.demo.layout.HomeActivity">


    <Switch
        android:id="@+id/switch_use_demo"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="Demo mode" />


    <Switch
        android:id="@+id/switch_use_local"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/switch_use_demo"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="Use Local Rabbit"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_local_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/switch_use_local"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rabbit IP Address"
            android:visibility="gone" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btnTestUnlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_duration_label"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:text="Test Unlock" />


    <TextView
        android:id="@+id/txt_rabbit_log"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/btnTestUnlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_weight="1.0"
        android:gravity="bottom"
        android:maxLines="500"
        android:scrollbars="vertical"
        android:text="Ready" />

    <TextView
        android:id="@+id/txt_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/switch_use_demo"
        android:layout_below="@+id/switch_use_demo"
        android:layout_marginTop="8dp"
        android:text="Door Open Time"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_door_open_time"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/switch_use_demo"
        android:layout_weight="1"
        android:text="5 seconds" />

</RelativeLayout>