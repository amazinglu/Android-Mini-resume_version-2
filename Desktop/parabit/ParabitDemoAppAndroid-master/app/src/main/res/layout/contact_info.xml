<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/img_contact"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/txt_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_contact"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/img_contact"
        android:layout_marginStart="60dp"
        android:text="Jane Doe"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_contact"
        android:layout_alignLeft="@+id/img_contact"
        android:layout_alignStart="@+id/txt_contact_name"
        android:text="(111) 222-3333" />

    <ImageButton
        android:id="@+id/btn_contact_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/img_contact"
        android:backgroundTint="@android:color/transparent"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_phone_black_24dp" />

    <ImageButton
        android:id="@+id/btn_contact_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/img_contact"
        android:layout_marginEnd="50dp"
        android:layout_toLeftOf="@+id/txt_contact_phone"
        android:backgroundTint="@android:color/transparent"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/stat_notify_chat" />

</RelativeLayout>