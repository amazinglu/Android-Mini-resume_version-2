<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parabit.parabeacon.app.demo.layout.HomeActivity">

    <TextView
        android:id="@+id/txt_contact_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:text="Your Emergency Contact" />

    <com.parabit.parabeacon.app.demo.components.ContactView
        android:id="@+id/contact_view_personal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/txt_contact_header"
        android:layout_marginTop="8dp"
        app:contact_image="@drawable/ic_person_black_24dp"
        app:contact_name="John Doe"
        app:contact_phone="111-222-3333" />

    <TextView
        android:id="@+id/txt_contact_first_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_view_personal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="First Responders" />

    <com.parabit.parabeacon.app.demo.components.ContactView
        android:id="@+id/contact_view_fire"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/txt_contact_first_header"
        android:layout_marginTop="8dp"
        app:show_sms="false"
        app:contact_image="@drawable/icons8_fire_station_96"
        app:contact_name="Northside Fire Dept"
        app:contact_phone="111-222-3333" />

    <com.parabit.parabeacon.app.demo.components.ContactView
        android:id="@+id/contact_view_police"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/contact_view_fire"
        android:layout_marginTop="8dp"
        app:show_sms="false"
        app:contact_image="@drawable/icons8_police_station_96"
        app:contact_name="Northside Police Dept"
        app:contact_phone="111-222-3333" />


</RelativeLayout>