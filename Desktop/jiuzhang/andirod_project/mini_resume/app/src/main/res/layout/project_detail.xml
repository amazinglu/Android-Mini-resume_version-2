<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin">

    <LinearLayout
        android:id="@+id/project_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/project_edit"
        android:orientation="vertical">
        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:hint="Android Dribble Client"/>

        <TextView
            android:id="@+id/project_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:hint="***** - ****"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/project_edit"
        android:layout_width="@dimen/text_size_medium"
        android:layout_height="@dimen/text_size_medium"
        android:src="@drawable/baseline_create_black_18dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/edit_button_margin_left"
        android:layout_marginTop="@dimen/edit_button_margin"
        android:layout_marginRight="@dimen/edit_button_margin"/>

    <TextView
        android:id="@+id/project_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_info"
        android:hint="something about your project"/>

    <TextView
        android:id="@+id/project_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        android:layout_below="@id/project_description"
        android:text="@string/project_url"/>

</RelativeLayout>